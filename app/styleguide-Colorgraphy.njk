<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/dist/assets/style/style.css">
    <title>Manggon - Financial Advisor Website</title>
</head>

<body>
    <section #styleGuide class="style-guide mb-lg-5">
        <div class="container-fluid header bg-light">
            <div class="container p-5 ">
                <h2 class="hero-title">Colorgraphy</h2>
            </div>
        </div>
        <!-- parimary bg container -->
        <div class="container mt-5 ps-5">
            <div class="row">
                <div class="col-6">
                    <p class="lg-text">Primary</p>
                </div>
                <div class="col-6 text-end align-self-center">
                    <div class="border-line"></div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-6">
                   <div class="color-box bg-primary border border-0"></div>
                </div>
                <div class="col-6">
                    <div class="color-box bg-secondary border border-0"></div>
                </div>
            </div>
        </div>

        <!-- secondary bg container -->
        <div class="container mt-5 ps-5">
            <div class="row">
                <div class="col-6">
                    <p class="lg-text">Secondary</p>
                </div>
                <div class="col-6 text-end align-self-center">
                    <div class="border-line"></div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-6">
                    <div class="color-box bg-success border border-0"></div>
                </div>
            </div>
        </div>

        <!-- text container -->
        <div class="container mt-5 ps-5">
            <div class="row">
                <div class="col-6">
                    <p class="lg-text">Text</p>
                </div>
                <div class="col-6 text-end align-self-center">
                    <div class="border-line"></div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-4">
                    <div class="color-box title-bg border border-0"></div>
                </div>
                <div class="col-4">
                    <div class="color-box body-text-bg border border-0"></div>
                </div>
                <div class="col-4">
                    <div class="color-box disbable-text-bg border border-0"></div>
                </div>
            </div>
        </div>

        <!-- Background conatiner -->
        <div class="container mt-5 ps-5">
            <div class="row">
                <div class="col-6">
                    <p class="lg-text">Background</p>
                </div>
                <div class="col-6 text-end align-self-center">
                    <div class="border-line"></div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-6">
                    <div class="color-box bg-light border border-0"></div>
                </div>
                <div class="col-6">
                    <div class="color-box bg-white"></div>
                </div>
            </div>
        </div>
    </section>
    <!-- main js -->
    <script src="/dist/assets/js/main.js"></script>
</body>

</html>